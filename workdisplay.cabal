  build-depends:       base ^>=4.13.0.0,
                      base,
                      transformers,
                      generic-lens,
                      lens,
                      random,
                      ilist,
                      mtl,
                      gloss,
                      bmp,
                      GLUT,
                      containers,
                      bytestring
  hs-source-dirs:      lib
  default-language:    Haskell2010

executable workdisplay
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       base ^>=4.13.0.0, 
                      workdisplay,
                      transformers,
                      generic-lens,
                      lens,
                      random,
                      ilist,
                      mtl,
                      gloss,
                      bmp
  hs-source-dirs:      src-exe
  default-language:    Haskell2010
  ghc-options:         -Wall 
                       -threaded
                       -O2
                       -fno-liberate-case 
                       -funfolding-use-threshold1000 
                       -funfolding-keeness-factor1000 
                       -optlo-O3

test-suite workdisplay-test
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             MyLibTest.hs
  build-depends:       base ^>=4.13.0.0
