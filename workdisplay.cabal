  exposed-modules:     MyLib
                      DND.ATTACKS.Attack
                      DND.ATTACKS.AttackFunctions
                      DND.ATTACKS.AttackFunctions2
                      DND.ATTACKS.DamageReduction
                      DND.ATTACKS.Smite
                      DND.ATTACKS.Weapon
                      DND.CHARACTER.AbilityScores
                      DND.CHARACTER.Bonuses
                      DND.CHARACTER.Character
                      DND.CHARACTER.Class
                      DND.CHARACTER.ClassFeatures
                      DND.CHARACTER.ClassUpdate
                      DND.CHARACTER.ClassUpdate2
                      DND.CHARACTER.Status
                      DND.CHARACTER.Sleep
                      DND.DAMAGEDICE.DamageDice
                      DND.DAMAGEDICE.DamageDiceFunctions
                      DND.DAMAGEDICE.Elemental
                      DND.DEFENSE.Armour
                      DND.DEFENSE.Defense
                      DND.DEFENSE.DefenseFunctions
                      DND.SPELLS.Spell
                      DND.SPELLS.SpellFunctions
                      DND.SPELLS.Summons
                      DND.STATDAMAGE.StatDamage
                      DND.STATDAMAGE.StatDamageFunctions
                      DND.STATUSEFFECTS.Effect
                      DND.STATUSEFFECTS.Effects
                      DND.STATUSEFFECTS.StatusEffectFunctions
                      DND.STATUSEFFECTS.StatusEffectFunctions1
                      DND.STATUSEFFECTS.StatusEffectFunctions2
                      DND.STATUSEFFECTS.StatusEffectFunctions3
